{
    "name": "CryptoKnight",
    "description": "Check exchange rate of crypto currencies in your default tab.",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
        "default_icon": "tab-icon.png",
        "default_title": "CryptoKnight"
    },

    "chrome_url_overrides": {
        "newtab": "public/index.html"
    },

    "permissions": ["activeTab", "storage"]
}